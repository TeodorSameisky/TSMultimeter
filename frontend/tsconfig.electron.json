{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-electron",
    "rootDir": ".",
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["electron-main.ts", "preload.ts"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
